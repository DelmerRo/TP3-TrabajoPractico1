<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/antipasto_regular"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDesafio1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:text="@string/txtDesafio1" />

    <Button
        android:id="@+id/btnDesafio2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:text="@string/txtDesafio2" />

    <Button
        android:id="@+id/btnDesafio3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:text="@string/txtDesafio3" />


</LinearLayout>